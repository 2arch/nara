{
  "rules": {
    "visitor-logs": {
      ".read": "auth != null",
      ".write": true
    },

    "users": {
      ".indexOn": ["username", "email"],
      ".read": true,
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "membership": {
          ".write": true
        }
      }
    },

    "worlds": {
      ".indexOn": ["public"],

      "blog": {
        ".read": true,
        ".write": "auth != null"
      },

      "home": {
        ".read": true,
        ".write": "auth != null"
      },

      "homeWorld": {
        ".read": true,
        ".write": "auth != null"
      },

      "public": {
        ".read": true,
        ".write": "auth != null",
        "$publicWorldId": {
          ".read": true,
          ".write": "auth != null",
          "data": {
            ".read": true,
            ".write": "auth != null"
          },
          "settings": {
            ".read": true,
            ".write": "auth != null"
          },
          "clipboard": {
            ".read": true,
            ".write": "auth != null"
          }
        }
      },

      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",

        "$stateName": {
          ".indexOn": ["public"],

          ".read": "data.child('public').val() == true || (auth != null && auth.uid == $userId)",
          ".write": "auth != null && auth.uid == $userId",

          "data": {
            ".read": "root.child('worlds').child($userId).child($stateName).child('public').val() == true || (auth != null && auth.uid == $userId)",
            ".write": "auth != null && auth.uid == $userId"
          },

          "users": {
            ".read": "auth != null && auth.uid == $userId",
            "$clientId": {
              "data": {
                ".read": "auth != null && auth.uid == $userId",
                ".write": "auth != null && auth.uid == $userId"
              }
            }
          },

          "settings": {
            ".read": "root.child('worlds').child($userId).child($stateName).child('public').val() == true || (auth != null && auth.uid == $userId)",
            ".write": "auth != null && auth.uid == $userId"
          },

          "public": {
            ".read": true,
            ".write": "auth != null && auth.uid == $userId"
          },

          "screenshot": {
            ".read": "root.child('worlds').child($userId).child($stateName).child('public').val() == true || (auth != null && auth.uid == $userId)",
            ".write": "auth != null && auth.uid == $userId"
          },

          "thumbnails": {
            "$shareId": {
              ".read": "root.child('worlds').child($userId).child($stateName).child('public').val() == true",
              ".write": true
            }
          },

          "analytics": {
            "views": {
              ".read": "auth != null && auth.uid == $userId",
              ".write": "root.child('worlds').child($userId).child($stateName).child('public').val() == true"
            }
          }
        }
      }
    }
  }
}