rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to screenshots
    match /screenshots/{userId}/{stateName}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload images to their own worlds
    match /worlds/{userId}/{stateName}/images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /sprites/{allPaths=**} {
       allow read: if true;
       allow write: if false;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
