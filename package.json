{
  "name": "nara",
  "version": "0.0.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"cross-env ELECTRON_START_URL=http://localhost:3000 electron .\" \"next dev\"",
    "electron:clean": "rm -rf .next out dist",
    "electron:build": "npm run electron:clean && cross-env NEXT_EXPORT=true next build && electron-builder",
    "build:electron": "npm run electron:build"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@sanity/diff-match-patch": "^3.2.0",
    "@types/katex": "^0.16.7",
    "@types/three": "^0.175.0",
    "firebase": "^11.5.0",
    "gifuct-js": "^2.1.2",
    "html2canvas": "^1.4.1",
    "katex": "^0.16.23",
    "next": "15.2.4",
    "nodemailer": "^7.0.10",
    "openchemlib": "^9.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^16.12.0",
    "three": "^0.175.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.j72n.nara",
    "productName": "Nara",
    "mac": {
      "category": "public.app.category.productivity",
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json",
      "public/fonts/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    }
  }
}
