rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public sprites - anyone can read, only admins can write
    match /sprites_public/{spriteId} {
      allow read: if true;
      allow write: if false; // Manually add public sprites via console/admin
    }

    // User documents and subcollections
    match /users/{userId} {
      // User sprites subcollection - user can manage their own
      match /sprites/{spriteId} {
        allow read: if true; // Anyone can read (for sharing)
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
