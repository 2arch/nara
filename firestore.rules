rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Sprites collection
    match /sprites/{userId} {
      // Public sprites - anyone can read, only admins can write
      match /public/{spriteId} {
        allow read: if true;
        allow write: if false; // Manually add public sprites via console/admin
      }
    }

    // User sprites - user can manage their own
    match /sprites/{userId}/{spriteId} {
      allow read: if true; // Anyone can read (for sharing)
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
