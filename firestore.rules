rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Sprite generation jobs - created by Firebase Functions, readable by all
    match /spriteJobs/{jobId} {
      allow read: if true; // Anyone can poll job status
      allow write: if false; // Only Functions can write
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
